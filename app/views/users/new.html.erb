
  <%= form_for(@user, html: {class: "form-signin"}) do |f| %>
    <h2 class="form-signin-heading">Sign up</h2>
      <%= f.text_field :name, autofocus: true,:placeholder => "Name",
                        :class => 'form-control' %>
      <%= f.email_field :provider, autocomplete: "off",
                        :placeholder => "Email", :class => 'form-control', :id => 'conf' %>
      <%= f.password_field :uid, autocomplete: "off",
                        :placeholder => "Password", :class => 'form-control' %>
      <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
